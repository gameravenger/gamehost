# Database Configuration
DATABASE_URL=your_supabase_database_url
SUPABASE_URL=your_supabase_url
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_KEY=your_supabase_service_key

# JWT Configuration
JWT_SECRET=your_jwt_secret_key

# Email Configuration (Optional)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password

# Google Drive Storage Configuration (NEW - REQUIRED FOR FILE UPLOADS)
GOOGLE_SERVICE_ACCOUNT_KEY=/path/to/your/service-account-key.json
GOOGLE_DRIVE_STORAGE_FOLDER_ID=your_google_drive_folder_id

# Optional Google Drive Settings
COMPRESSION_QUALITY=75
AUTO_CLEANUP_DAYS=2
TEMP_DIR=/tmp

# Server Configuration
PORT=3000
NODE_ENV=production